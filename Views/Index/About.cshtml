					<div class="SouthernGlazers">
						<div class="SouthernGlazersfirstInstance">
							<div class="block-Image">
								<span class="VerticalAlign"></span><img class="SouthernGlazersLogo" src="/images/SouthernGlazerslogo.png" alt="Southern Glazers">
								<img class="SouthernGlazersArrow" src="/images/downarrow.png">
							</div>
						</div>
						<div class="SouthernGlazersflex-container">
							<img class="InvisibleSouthernGlazersClose" src="/images/close.png">
							<span class="VerticalAlign"></span><img class="SouthernGlazersClicked" src="/images/SouthernGlazerslogo.png" alt="Southern Glazers">
							<div class="SouthernGlazersExperience"></div>
							<img class="SouthernGlazersClose" src="/images/close.png">
						</div>
						
					</div>
					<div class="Strasz">
						<div class="StraszfirstInstance">
							<div class="block-Image">
								<span class="VerticalAlign"></span><img class="StraszLogo" src="/images/Straszlogo.png" alt="Strasz">
								<img class="StraszArrow" src="/images/downarrow.png">
							</div>
						</div>
						<div class="Straszflex-container">
							<img class="InvisibleStraszClose" src="/images/close.png">
							<span class="VerticalAlign"></span><img class="StraszClicked" src="/images/Straszlogo.png" alt="Strasz">
